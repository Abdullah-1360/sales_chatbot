# Server Configuration
PORT=4000

# Logging Configuration
# LOG_LEVEL options: ERROR, WARN, INFO, DEBUG
# ERROR: Only errors
# WARN: Errors and warnings
# INFO: Errors, warnings, and info (default)
# DEBUG: All logs including detailed debug information
LOG_LEVEL=INFO

# WHMCS API Configuration
WHMCS_URL=https://portal.hostbreak.com/includes/api.php
WHMCS_API_IDENTIFIER=your_api_identifier_here
WHMCS_API_SECRET=your_api_secret_here
WHMCS_CACHE_TTL=300

# WHMCS Product Group IDs (GIDs) - Automatically synced:
# GID 1  = cPanel Hosting
# GID 2  = Windows Reseller
# GID 6  = SSL Certificates (Other)
# GID 20 = WordPress Hosting
# GID 21 = Business Hosting (WooCommerce)
# GID 25 = Windows Hosting
# GID 26 = SSL Certificates
# GID 28 = cPanel Reseller Hosting

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/sales_chatbot
USE_MONGODB=true

# Sync Configuration
# Note: Set AUTO_SYNC_ON_STARTUP=false on shared hosting with limited memory
# to avoid WebAssembly memory errors. Run sync manually or via cron instead.
AUTO_SYNC_ON_STARTUP=true
SYNC_INTERVAL_HOURS=24

# Exchange Rate Configuration
# Leave empty to fetch live rates from API, or set a fixed rate (e.g., 282.66)
FIXED_EXCHANGE_RATE=
AUTO_REFRESH_STALE_PRICING=false

# Legacy fixture mode (deprecated - use MongoDB instead)
USE_FIXTURE=false
